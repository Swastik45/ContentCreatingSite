{
  "hosting": {
    "public": "build",
    "ignore": [
      "**/node_modules/**"
    ],
    "prerender": {
      "urls" : ["/","/public-content"],
      "crawl" : true,
      "enabled": true
  },
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|webp|png|jpg|jpeg|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,must-revalidate"
          }
        ]
      }
    ]
  }
}
